@model TP7.Models.FacturasModels

@{
    ViewBag.Title = "CargarFactura";
}

<h2>Cargar Factura</h2>


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <h4>Detalles</h4>
        @for (var item = 0; item < Model.Detalle.Count; item++)
        {
            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Detalle[item].FacturaId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Detalle[item].FacturaId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Detalle[item].ArtciulosId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Detalle[item].ArtciulosId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Detalle[item].Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Detalle[item].Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    <div>
        @Html.ActionLink("Home", "Index", "Home") |
        @Html.ActionLink("Ver listado", "ListarFacturas", "Facturas")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
