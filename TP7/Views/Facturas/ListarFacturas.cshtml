@model IEnumerable<TP7.Models.FacturasModels>

@{
    ViewBag.Title = "ListarFacturas";
}

<h2>Lista de Facturas</h2>

<p>
    @Html.ActionLink("Cargar Factura", "CargarFactura", "Facturas")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarFactura", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "EliminarFactura", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("<< Volver", "Index", "Home")
</div>